	"calendar": {
    	  "format": {
      	    "months": "<span color='#ffa500'><b>{}</b></span>",
      	    "today": "<span color='#ff0000'><b>{}</b></span>"
    	  }
  	},
	"actions": {
		"on-click-right": "mode",
